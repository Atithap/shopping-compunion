{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "types": [
      "vite/client",
      "chrome"
    ],
    "skipLibCheck": true,
    /* 1. ป้องกันปัญหาเรื่องชื่อไฟล์เล็ก-ใหญ่เมื่อย้าย OS */
    "forceConsistentCasingInFileNames": true,
    /* 2. เปิดโหมดตรวจสอบ Type อย่างเข้มงวด (แนะนำอย่างยิ่ง) */
    "strict": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting / ปรับแต่งเพิ่มเติม */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}